{
  "name": "nextjs-mcp-adapter",
  "version": "0.4.1",
  "description": "Vercel MCP Adapter for Next.js and other frameworks",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./next": {
      "types": "./dist/next/index.d.ts",
      "import": "./dist/next/index.js",
      "require": "./dist/next/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "directory": "packages/mcp-adapter",
    "type": "git",
    "url": "git+https://github.com/vercel/mcp-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/vercel/mcp-adapter/issues"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "version-packages": "changeset version",
    "changeset": "changeset",
    "release": "pnpm build && changeset publish"
  },
  "keywords": [
    "mcp",
    "vercel",
    "next.js",
    "ai"
  ],
  "author": "Vercel",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.10.2",
    "redis": "^4.6.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@types/node": "^22.15.8",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "next": ">=13.0.0"
  },
  "packageManager": "pnpm@9.4.0",
  "publishConfig": {
    "access": "public"
  }
}
